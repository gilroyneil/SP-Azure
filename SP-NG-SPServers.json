                                "[concat('Microsoft.ClassicCompute/virtualMachines/',variables('SP1Name'),'/extensions/domainJoinCommand')]"
            ]
            
        },
        
        {
            "type": "Microsoft.ClassicCompute/virtualMachines/extensions",
            "properties": {
